<!doctype html>
<html>
	<head>
		<%- include('partials/head'); %>
	</head>
	<body>

		<%- include('partials/header'); %>

		<section>
			<div class="container">
			<h2>Create New Medical Record<h2>
			<h2><%=healthCardNumber%></h2>
			<h3>Vitals<h3>
			<form class="create-medical-record-form" method="POST" action="/create-medical-record">
				<div class="form-group">
					<input type="hidden" 
							   id="editBtnhealthCardNumber" 
							   name="healthCardNumber" 
							   value="<%=healthCardNumber%>"/>
				</div>
				<div class="form-group">
					<label for="bodyWeight">body weight</label>
					<input type="number" 
						   class="form-control" 
						   id="bodyWeight" 
						   name="weight"
						   aria-describedby="bodyWeighHelp" 
						   placeholder="Enter body weight"
						   required>
					       <small id="bodyWeighHelp" 
					       		class="form-text text-muted"
					       			>We'll never share your body Weight with anyone else.
					       </small>
				</div>
				<div class="form-group">
					<label for="bodyHeight">Height</label>
					<input type="number" 
						  class="form-control" 
						  name="height"
						  id="bodyHeight" 
						  placeholder="body weight"
						  required>
				</div>
				<div class="form-group">
					<label for="recordDate">Record Date</label>
					<input type="date" 
						class="form-control" 
						id="recordDate" 
						name="recordDate"						 
						required>
				</div>				
				
				
				<div class="form-group">
					<label for="recordDate">immunology type</label>
					<input type="text" 
						  class="form-control" 
						  id="immunologytype" 						 
						  name="immunologyType"
						  required>
				</div>

				<div class="form-group">
					<label for="recordDate">doses</label>
					<input type="number" 
						  class="form-control" 
						  name="doses"
						  id="doses" 						 
						  required>
				</div>

				<button type="submit" class="btn btn-primary">Submit</button>
			</form>

		</div>
		</section>
		<section>
		
		</section>

	</body>
</html>
