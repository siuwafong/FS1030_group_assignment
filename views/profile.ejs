<!doctype html>
<html>

<head>
	<%- include('partials/head'); %>
</head>

<body>

	<%- include('partials/header'); %>


		<div class="container">
			<img src="../static/logo.png"/>
		</div>
		<div class="container">
			<div class="row">
				<div class="col-md-3">
					<div class="card side">
							<div class="card-body">
								<h5 class="card-title">Patients</h5>
								<form action="/admin/profile">
									<input type="text" class="form-control" placeholder="Search for..." name="healthCardNumber">
								</form>

								<ul class="list-group list-group-flush">
									<% patients.forEach((patient, index) => { %>

										<li class="list-group-item">
											<%= patient.first_name + ' ' + patient.last_name %><span class="badge"><%= patient.health_card_number %></span>
										</li>

									<% }); %>
								</ul>
							</div>
						</div>
					</div>

					<% if (healthCardNumber) { %>
					<div class="col-md-9">
						<div class="card main">
							<div class="card-header">
								<div class="info">
									<h4><%= selectedPatient %><div class="pipe">&nbsp;|&nbsp;</div>MRN:&nbsp;<%= selectedHealthCardNumber %></h4>
								</div>
                <button class="btn btn-sm btn-info">Edit</button>

							</div>
							<div class="card-body">

								<ul class="nav nav-tabs">
									<li class="nav-item active">
										<a class="nav-link active" href="profile?healthCardNumber=<%= selectedHealthCardNumber %>">Details</a>
									</li>


									<li class="nav-item">
										<a class="nav-link active" href="record?healthCardNumber=<%= selectedHealthCardNumber %>">Medical Record</a>
									</li>
								</ul>


								<div class="tab-content">
								<% if (pageId === 'profile') { %>
									<table class="table table-condensed table-bordered margin-top-10">
										<tbody>
											<tr>
												<td>DOB</td>
												<td class="dob"><%= selectedBirthDate %></td>
											</tr>
											<tr>
												<td>Gender</td>
												<td><%= selectedGender %></td>
											</tr>
											<tr>
												<td>Email</td>
												<td><a href="mailto:<%= selectedEmail %>"><%= selectedEmail %></a></td>
											</tr>
											<tr>
												<td>Address</td>
												<td><%= selectedAddress %></td>
											</tr>
											<tr>
												<td>Phone number</td>
												<td><%= selectedPhone %></td>
											</tr>
										</tbody>
									</table>

								<% } else { %>

										<div class="col-sm-4">
											<div class="card border-primary mb-4 record-card">
												<div class="card-header">
												Vitals
												</div>
												<ul class="list-group list-group-flush">
													<li class="list-group-item"><h6>Height</h6><%= selectedHeight %></li>
													<li class="list-group-item"><h6>Weight</h6><%= selectedWeight %></li>
													<li class="list-group-item <%= parseInt(selectedBmi) >= 25 ? 'overweight' : null %>"><h6>BMI <% if(parseInt(selectedBmi) >= 25) { %><i class="fa fa-exclamation-triangle"></i><%} %></h6><%= selectedBmi %></li>
												</ul>

												<%/* BMI thresholds

														Underweight = <18.5
														Normal weight = 18.5–24.9
														Overweight = 25–29.9
														Obesity = BMI of 30 or greater  */%>

											</div>
										</div>

										<div class="col-sm-4">
											<div class="card border-primary mb-4 record-card">
												<div class="card-header">
												Visits
												</div>
												<div class="card-body text-primary">
												Hello
												</div>
											</div>
										</div>

											<div class="col-sm-4">
											<div class="card border-primary mb-4 record-card">
												<div class="card-header">
												Diagnoses
												</div>
												<div class="card-body text-primary">
												Hello
												</div>
											</div>
										</div>



										<% }; %>
								</div>
							</div>
						</div>
					</div>
					<% }; %>
				</row>
			</div>
		</div>

</body>

</body>

</html>
